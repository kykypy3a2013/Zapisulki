<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Основная тема приложения через AppCompat (для совместимости) -->
    <style name="Theme.Zapisulki" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <!-- Убираем ActionBar полностью -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Тема Splash Screen -->
    <style name="Theme.Zapisulki.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/main_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Убираем ActionBar в Splash Screen -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>